{
  "name": "web-snippets",
  "displayName": "Web Formatters & Web Snippets",
  "description": "This extension contains snippets & formatters for HTML, CSS and Javascript Files",
  "version": "3.0.8",
  "publisher": "UI",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Formatters",
    "Snippets"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gopi1216/web-snippets.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Formatter Settings",
      "properties": {
        "compactCSS.options": {
          "type": "object",
          "default": {
            "format": {
              "breaks": {
                "afterAtRule": true,
                "afterBlockBegins": 1,
                "afterBlockEnds": 2,
                "afterComment": 1,
                "afterRuleEnds": true,
                "beforeBlockEnds": 1
              },
              "spaces": {
                "aroundSelectorRelation": true,
                "beforeValue": true
              },
              "semicolonAfterLastProperty": true
            },
            "level": "2"
          },
          "description": "clean options"
        },
        "prettyJS.options": {
          "type": "object",
          "default": {
            "jsxSingleQuote": true,
            "singleQuote": true,
            "printWidth": 96
          },
          "description": "Pretty JS default options"
        }
      }
    },
    "keybindings": [
      {
        "command": "web-formatter.CompactCSS",
        "key": "shift+alt+f",
        "when": "editorTextFocus && editorLangId == 'css'"
      },
      {
        "command": "web-formatter.PrettierJS",
        "key": "shift+alt+f",
        "when": "editorTextFocus && (editorLangId == 'javascript' || editorLangId == 'typescript')"
      }
    ],
    "commands": [
      {
        "command": "web-formatter.CompactCSS",
        "title": "Compact CSS"
      },
      {
        "command": "web-formatter.PrettierJS",
        "title": "Pretty JS"
      }
    ],
    "snippets": [
      {
        "language": "html",
        "path": "./snippets/htmlSnippets.json"
      },
      {
        "language": "css",
        "path": "./snippets/cssSnippets.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/jsSnippets.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.76.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "clean-css": "^5.3.2",
    "prettier": "^3.5.3"
  }
}
